<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="50dp"
    android:paddingStart="50dp"
    android:paddingRight="50dp"
    android:paddingEnd="50dp"
    android:paddingBottom="50dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.chepel.krug.MyInfoActivity"
    tools:showIn="@layout/activity_my_info">

    <android.support.constraint.Guideline
        android:id="@+id/halfV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        />

    <android.support.design.widget.TextInputLayout
        android:theme="@style/AppTheme"
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <AutoCompleteTextView
            android:id="@+id/my_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_name"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:theme="@style/AppTheme"
        android:id="@+id/last_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/name_layout">

        <EditText
            android:id="@+id/my_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_lastname"
            android:maxLines="1"
            android:inputType="textCapWords"
            android:selectAllOnFocus="true"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        style="@style/akey"
        android:text="@string/prompt_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/last_name_layout"
        app:layout_constraintEnd_toStartOf="@+id/halfV"
        />
    <TextView
        style="@style/avalue"
        android:id="@+id/my_sex"
        tools:text=""
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="@string/unspec"
        app:layout_constraintTop_toBottomOf="@+id/last_name_layout"
        app:layout_constraintStart_toEndOf="@+id/halfV"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        style="@style/akey"
        android:text="@string/prompt_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        app:layout_constraintTop_toBottomOf="@+id/my_sex"
        app:layout_constraintEnd_toStartOf="@+id/halfV"
        />
    <TextView
        style="@style/avalue"
        android:id="@+id/my_age"
        tools:text=""
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:hint="@string/unspec"
        app:layout_constraintTop_toBottomOf="@+id/my_sex"
        app:layout_constraintStart_toEndOf="@+id/halfV"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        style="@style/akey"
        android:text="@string/prompt_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        app:layout_constraintTop_toBottomOf="@+id/my_age"
        app:layout_constraintEnd_toStartOf="@+id/halfV"
        />
    <TextView
        style="@style/avalue"
        android:id="@+id/my_height"
        tools:text=""
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:hint="@string/unspec"
        app:layout_constraintTop_toBottomOf="@+id/my_age"
        app:layout_constraintStart_toEndOf="@+id/halfV"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        style="@style/akey"
        android:text="@string/prompt_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        app:layout_constraintTop_toBottomOf="@+id/my_height"
        app:layout_constraintEnd_toStartOf="@+id/halfV"
        />
    <TextView
        style="@style/avalue"
        android:id="@+id/my_weight"
        tools:text=""
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:hint="@string/unspec"
        app:layout_constraintTop_toBottomOf="@+id/my_height"
        app:layout_constraintStart_toEndOf="@+id/halfV"
        app:layout_constraintEnd_toEndOf="parent"
        />

        <TextView
            android:id="@+id/lbl_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:text="Units"
            app:layout_constraintBaseline_toBaselineOf="@+id/switch_units"
            app:layout_constraintEnd_toStartOf="@+id/lbl_imperial"
            />

    <TextView
        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp"
        android:id="@+id/lbl_imperial"
        android:theme="@style/MyInfoTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Imperial"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintBaseline_toBaselineOf="@+id/switch_units"
        app:layout_constraintEnd_toStartOf="@+id/switch_units"
        />

    <android.support.v7.widget.SwitchCompat
        android:layout_margin="40dp"
        android:id="@+id/switch_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:gravity="center_vertical"
        android:switchPadding="0dp"
        android:text=""
        android:textColor="@color/textColorPrimary"
        android:theme="@style/MyInfoTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:thumbTint="@color/achuGreen"
        app:trackTint="@color/colorControlNormal" />

        <TextView
            android:id="@+id/lbl_metric"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:theme="@style/MyInfoTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Metric"
            android:textColor="@color/textColorPrimary"
            app:layout_constraintBaseline_toBaselineOf="@+id/switch_units"
            app:layout_constraintStart_toEndOf="@+id/switch_units"
            />


</android.support.constraint.ConstraintLayout>
