                android:layout_height="wrap_content"
                style="@style/calibrateText"
                android:text="@string/symp_sinus"
                app:layout_constraintEnd_toEndOf="@+id/symp3"
                app:layout_constraintStart_toStartOf="@+id/symp3"
                app:layout_constraintTop_toBottomOf="@+id/symp3" />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/chk3"
