<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.chepel.krug.CalibrateActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:fitsSystemWindows="true"
    android:padding="16dp"
    android:weightSum="3"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="3"
        android:orientation="horizontal">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            >
            <android.support.v7.widget.CardView
                android:id="@+id/symp1"
                style="@style/CalibrateCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_symptom_01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/txt_symp1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/calibrateText"
                android:text="@string/symp_nose_run"
                app:layout_constraintEnd_toEndOf="@+id/symp1"
                app:layout_constraintStart_toStartOf="@+id/symp1"
                app:layout_constraintTop_toBottomOf="@+id/symp1" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/chk1"
                style="@style/fabselection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                android:alpha="0"
                tools:visibility="visible"
                tools:alpha="0.5"/>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            >
                <android.support.v7.widget.CardView
                    android:id="@+id/symp2"
                    style="@style/CalibrateCard"
                    android:layout_width="0dp"
                    app:layout_columnWeight="1"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:adjustViewBounds="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_symptom_02" />
                </android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/txt_symp2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/calibrateText"
                android:text="@string/symp_congest"
                app:layout_constraintEnd_toEndOf="@+id/symp2"
                app:layout_constraintStart_toStartOf="@+id/symp2"
                app:layout_constraintTop_toBottomOf="@+id/symp2" />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/chk2"
                style="@style/fabselection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                android:alpha="0"
                tools:visibility="visible"
                tools:alpha="0.5"
                />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            >
                <android.support.v7.widget.CardView
                    android:id="@+id/symp3"
                    style="@style/CalibrateCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:adjustViewBounds="true"
                        android:layout_width="match_parent"
