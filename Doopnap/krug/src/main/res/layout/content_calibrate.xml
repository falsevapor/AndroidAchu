    </LinearLayout>

    <Button
        android:id="@+id/btnOK"
        style="@style/achuGreenButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/symp_confirm" />
</LinearLayout>
