<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.chepel.krug.DashboardFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:weightSum="2"
    android:background="@drawable/main_background">

    <!---->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/topContainer"
        android:padding="8dp">

        <ViewFlipper
            android:id="@+id/viewpagerHot"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="0dp"
            app:layout_constraintBottom_toTopOf="@+id/topDots"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="8dp"
                style="@style/DashBoardTopCard">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/tophotcard" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_heart_overlay_bg" />

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_topTip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginEnd="0dp"
                        android:background="?attr/selectableItemBackground"
                        android:padding="16dp"
                        android:text="Let's improve it! &gt;"
                        android:textColor="@color/textColorPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/DashBoardTopCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#10ffff00">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_weather_overlay_bg" />

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_topHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginStart="0dp"
                        android:background="?attr/selectableItemBackground"
                        android:padding="16dp"
                        android:text="&lt;"
                        android:textColor="@color/textColorPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <Button
                        android:id="@+id/btn_topDeal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginEnd="0dp"
                        android:background="?attr/selectableItemBackground"
                        android:padding="16dp"
                        android:text="Deals! &gt;"
                        android:textColor="@color/textColorPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/DashBoardTopCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#2024abff">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_sleep_overlay_bg" />

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_topTipBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginStart="0dp"
                        android:background="?attr/selectableItemBackground"
                        android:padding="16dp"
                        android:text="&lt;"
                        android:textColor="@color/textColorPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
        </ViewFlipper>

        <android.support.design.widget.TabLayout
            android:id="@+id/topDots"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewpagerHot"
            app:layout_constraintBottom_toTopOf="@+id/catchPhrase"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tabBackground="@drawable/toptab_selector"
            app:tabIndicatorHeight="0dp">
            <android.support.design.widget.TabItem
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.design.widget.TabItem
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.design.widget.TabItem
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TabLayout>

        <TextView
            android:id="@+id/catchPhrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topDots"
            app:layout_constraintBottom_toTopOf="@+id/card_tl"
            android:text="View the sickness patterns discovered in your health data " />

        <android.support.v7.widget.CardView
            android:id="@+id/card_tl"
            style="@style/DashBoardCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="#ffeded"
            app:layout_constraintBottom_toTopOf="@+id/card_bl"
            app:layout_constraintEnd_toStartOf="@+id/card_tr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/catchPhrase">

            <ImageView
                app:srcCompat="@drawable/ic_heart_overlay_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitEnd"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/titleTL"
                    style="@style/DashBoardCardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Heart" />
                <TextView
                    android:id="@+id/valueTL"
                    style="@style/DashBoardCardValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="77%"
                    app:layout_constraintTop_toBottomOf="@+id/titleTL"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <TextView
                    style="@style/DashBoardCardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/valueTL"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="12sp"
                    android:text="Match" />

                <ImageView
                    app:srcCompat="@drawable/ic_heart"
                    style="@style/dashIcon"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@+id/progress_tl"
                    app:layout_constraintBottom_toBottomOf="@+id/progress_tl"
                    app:layout_constraintEnd_toEndOf="@+id/progress_tl"
                    app:layout_constraintStart_toStartOf="@+id/progress_tl"/>

                <com.chepel.krug.GaugeProgress
                    android:id="@+id/progress_tl"
                    style="@style/dashGaugeRainbow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:animateValue="false"
                    tools:intro="false" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_tr"
            style="@style/DashBoardCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="#e9f6ff"
            app:layout_constraintBottom_toTopOf="@+id/card_br"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_tl"
            app:layout_constraintTop_toBottomOf="@+id/catchPhrase">

            <ImageView
                app:srcCompat="@drawable/ic_sleep_overlay_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitEnd"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titleTR"
                    style="@style/DashBoardCardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Activity" />
                <TextView
                    android:id="@+id/valueTR"
                    style="@style/DashBoardCardValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="77%"
                    app:layout_constraintTop_toBottomOf="@+id/titleTR"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <TextView
                    style="@style/DashBoardCardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/valueTR"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="12sp"
                    android:text="Match" />

                <ImageView
                    app:srcCompat="@drawable/ic_activities_large"
                    style="@style/dashIcon"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@+id/progress_tr"
                    app:layout_constraintBottom_toBottomOf="@+id/progress_tr"
                    app:layout_constraintEnd_toEndOf="@+id/progress_tr"
                    app:layout_constraintStart_toStartOf="@+id/progress_tr"/>

                <com.chepel.krug.GaugeProgress
                    android:id="@+id/progress_tr"
                    style="@style/dashGaugeRainbow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:animateValue="false"
                    tools:intro="false" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_bl"
            style="@style/DashBoardCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="#f6f1ff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/card_br"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_tl">

            <ImageView
                app:srcCompat="@drawable/ic_sleep_overlay_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitEnd"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titleBL"
                    style="@style/DashBoardCardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Sleep bank" />
                <TextView
                    android:id="@+id/valueBL"
                    style="@style/DashBoardCardValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+3"
                    app:layout_constraintTop_toBottomOf="@+id/titleBL"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <TextView
                    style="@style/DashBoardCardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/valueBL"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="12sp"
                    android:text="Hours" />

                <ImageView
                    app:srcCompat="@drawable/ic_sleep_large"
                    style="@style/dashIcon"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@+id/progress_bl"
                    app:layout_constraintBottom_toBottomOf="@+id/progress_bl"
                    app:layout_constraintEnd_toEndOf="@+id/progress_bl"
                    app:layout_constraintStart_toStartOf="@+id/progress_bl"/>

                <com.chepel.krug.GaugeProgress
                    android:id="@+id/progress_bl"
                    style="@style/dashGauge"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:maxV="12"
                    app:minV="-12"
                    app:negativeTrackColor="#20F44336"
                    app:negativeValueColor="#F44336"
                    app:showPlus="true"
                    app:startFrom="135.0"
                    app:sweep="270.0"
                    app:trackAlpha="32"
                    app:trackColor="#204CAF50"
                    app:valueColor="#4CAF50"
                    app:valueSuffix=""
                    tools:animateValue="false"
                    tools:intro="false"
                    />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_br"
            style="@style/DashBoardCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="#fef4e9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_bl"
            app:layout_constraintTop_toBottomOf="@+id/card_tr">

            <ImageView
                app:srcCompat="@drawable/ic_weather_overlay_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitEnd"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titleBR"
                    style="@style/DashBoardCardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Weather" />
                <TextView
                    android:id="@+id/valueBR"
                    style="@style/DashBoardCardValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="77%"
                    app:layout_constraintTop_toBottomOf="@+id/titleBR"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <TextView
                    style="@style/DashBoardCardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/valueBR"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="12sp"
                    android:text="Match" />


                <ImageView
                    app:srcCompat="@drawable/ic_weather_large"
                    style="@style/dashIcon"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@+id/progress_br"
                    app:layout_constraintBottom_toBottomOf="@+id/progress_br"
                    app:layout_constraintEnd_toEndOf="@+id/progress_br"
                    app:layout_constraintStart_toStartOf="@+id/progress_br"/>

                <com.chepel.krug.GaugeProgress
                    android:id="@+id/progress_br"
                    style="@style/dashGaugeRainbow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:animateValue="false"
                    tools:intro="false"
                    />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cardTL"
            style="@style/DashBoardCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            tools:visibility="invisible"
            >
            <ImageView
                app:srcCompat="@drawable/ic_heart_overlay_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitEnd"/>
            <include layout="@layout/card_heart"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardTR"
            style="@style/DashBoardCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            tools:visibility="invisible"
            >
            <ImageView
                app:srcCompat="@drawable/ic_sleep_overlay_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitEnd"/>

            <include layout="@layout/card_activity"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardBL"
            style="@style/DashBoardCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            tools:visibility="invisible"
            >
            <ImageView
                app:srcCompat="@drawable/ic_sleep_overlay_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitEnd"/>
            <include layout="@layout/card_sleep"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardBR"
            style="@style/DashBoardCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            tools:visibility="invisible"
            >
            <ImageView
                app:srcCompat="@drawable/ic_weather_overlay_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitEnd"/>
            <include layout="@layout/card_weather"/>
        </android.support.v7.widget.CardView>

</FrameLayout>
